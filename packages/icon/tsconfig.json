{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "preserve" ,
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"]
}
